#include "msp.h"


/**
 * main.c
 */
void main(void)
{
	WDT_A->CTL = WDT_A_CTL_PW | WDT_A_CTL_HOLD;		// stop watchdog timer
	
	// Define a and b, two counter variables that will be incremented when a desired pattern is found
	uint32_t a = 0;
	uint32_t b = 0;
	
	// Define a pointer that will iterate through the memory addresses
	memLoc = (uint32_t *) 0x2001000A; //Starting location
	
	for(memLoc; memLoc < (uint32_t *)0x200103CC; memLoc++){ //For loop to look through each element in the desired memory range
	    
	    
	    if(*memLoc == 0x0000ACCA){ //Scan for the desired half-word pattern
	        a++; //Increment a
	    }
	    
	    if(*memLoc == 0xABBAAFFA){ //Scan for the desired full-word pattern
	        b++; //Increment b 
	    }
	}
 //	
}
